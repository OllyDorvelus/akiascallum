<div class="container-fluid" id="content-section">
  <div class="row">
    <div class="col-md-6">
      <% if @latest_blogs.any? %>
      <h2 align="center" style="font-weight:900">Latest Blogs</h2>
      <% end %>
        <% @latest_blogs.each do |blog| %>
        <div style="padding-bottom:20px">
            <h3 align="center" style="font-weight:700"><%= blog.title %></h3>
            <p class="description"><%= simple_format raw(blog.description.truncate(5000)), class:".blog-body-list" %></p>
            <div style="padding-top:10px">
              <small>Last updated <%= time_ago_in_words(blog.updated_at)  %> ago </small></br>
              <small>Posted <%= time_ago_in_words(blog.created_at)  %> ago </small></br>
          </div><br>
            <p class="view-btn"><%= link_to "View Blog", blog_path(blog) %></p>
        </div>
        <% end %>
      
    </div>
    <div class="col-md-offset-1 col-md-5">
      <% if @latest_photos.any? %>
        <h2 align="center" style="font-weight:900">Latest Photos</h2>
      <% end %>
      <% @latest_photos.each do |photo| %>
      <div class="col-md-6 index-gallery" style="padding-bottom:10px"><%= image_tag photo.picture.url %></div>
      <% end %>
    </div>
  </div>

</div>

  
