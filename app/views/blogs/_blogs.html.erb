<% obj.each do |blog| %>
<div class="row blog-list">
  <div class="col-md-3 col-md-offset-1 blog-list-title">
    <h3><%= link_to blog.title, blog_path(blog) %></h3>
    <h4>Akia Callum</h4>
  </div>
  <div class="col-md-4 blog-body-list">
    <p>
      <%= simple_format truncate(blog.description, length: 600), class:".blog-body-list" %>
    </p>
    <div style="float:left">
      <small>Last updated <%= time_ago_in_words(blog.updated_at)  %> ago </small></br>
    <small>Posted <%= time_ago_in_words(blog.created_at)  %> ago </small></br>
    <small><%= link_to "View blog", blog_path(blog) %></small></br>
      <% if logged_in? && current_user.admin? %>
           <%= link_to "Edit article", edit_blog_path(blog), class: "btn btn-xs btn-primary" %>
           <%= link_to "Delete article", blog_path(blog), method: :delete,
               data: { confirm: 'Are you sure you want to delete this article'},
               class: "btn btn-xs btn-danger"%>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <% if blog.picture? %>
      <%= image_tag blog.picture.url, class:"img-responsive" %>
    <% else %>
      <%= image_tag @photos.sample, class:"img-responsive" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <hr> 
  </div> 
</div>


<% end %>
