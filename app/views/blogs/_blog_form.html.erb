<%= render 'shared/errors', obj: @blog %>


<div class='row'>
 <div class='col-xs-12'>
    <%= form_for(@blog, :html => {class: "form-horizontal", role: "form"}) do |f| %>
   <div class='form-group'>
     <div class="control-label col-sm-2">
        <%= f.label :title %> 
     </div>
     <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of blog", autoFocus: true %>
     </div>
   </div>
   <div class='form-group'>
     <div class="control-label col-sm-2">
        <%= f.label :description %>
     </div>
     <div class="col-sm-8">
        <%= f.text_area :description,  class: "form-control", rows: 20, placeholder: "Blog content" %>
     </div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :picture %><br>
    </div>
   <div class="col-sm-3">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", :class => 'form-control' %>
   </div>
  </div>
    <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
         </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel and go back to blogs", blogs_path %> ]
   </div
     </div>
</div>