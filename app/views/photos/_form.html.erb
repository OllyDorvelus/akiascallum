<%= render 'shared/errors', obj: @photo %>
<%= form_for @photo, :html => { multipart: true, :class => "form-horizontal photo" } do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2 col-sm-offset-3">
    <%= f.label :caption %><br>
    </div>
    <div class="col-sm-7">
    <%= f.text_field :caption %>
    </div>
  </div>
   <div class="form-group">
    <div class="control-label col-sm-2 col-sm-offset-3">
      <%= f.label :picture %><br>
    </div>
   <div class="col-sm-3">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", :class => 'form-control' %>
   </div>
  </div>
    <div class="form-group actions">
         <div class="col-sm-3 col-sm-offset-5">
      <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
         </div>
<% end %>
